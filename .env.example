NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
AUTH_DEV_BYPASS=true

# Database (Neon/Postgres)
# Replace with your actual Neon/Postgres connection string.
DATABASE_URL=postgres://user:password@host:5432/dayflow_polaris

# Upstash Redis (sessions & cache)
# Create an Upstash Redis database and paste its REST credentials.
UPSTASH_REDIS_REST_URL=https://your-upstash-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token

# WorkOS (SSO)
# Create a WorkOS project and configure Redirect URI:
#   http://localhost:3000/api/auth/workos/callback
WORKOS_API_KEY=your-workos-api-key
WORKOS_CLIENT_ID=your-workos-client-id
WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/workos/callback

# Webhooks (reserved for future use)
WORKOS_WEBHOOK_SECRET=your-workos-webhook-secret-or-placeholder

# Optional flags (not required yet)
# LOG_LEVEL=debug
# SENTRY_DSN=
# NEXT_TELEMETRY_DISABLED=1

# Notes:
# - Do NOT commit this file to version control.
# - Ensure DATABASE_URL and Upstash values are valid before running migrations.
# - WorkOS values must be real for SSO to succeed; otherwise, use placeholders for local-only UI/dev.
